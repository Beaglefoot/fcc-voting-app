  "scripts": {
    "precommit": "lint-staged",
    "env": "env $(cat .env)",
    "start": "yarn env -- node dist/index.js",
    "serve": "yarn env -- nodemon -i src dist/",
    "debug": "yarn env -- node --inspect-brk dist",
    "build:live": "tsc --watch",
    "lint": "tslint './src/**/*.{ts,tsx}' -p tsconfig.json"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint --",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/cookie-session": "^2.0.34",
    "@types/express": "^4.16.0",
    "@types/lodash": "^4.14.109",
    "@types/mongoose": "^5.0.15",
    "@types/node": "^10.3.2",
    "@types/passport": "^0.4.5",
    "@types/passport-github": "^1.1.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.12.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "cookie-session": "^2.0.0-beta.3",
    "ejs": "^2.5.9",
    "express": "^4.16.3",
    "lodash": "^4.17.5",
    "mongoose": "^5.0.16",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0"
